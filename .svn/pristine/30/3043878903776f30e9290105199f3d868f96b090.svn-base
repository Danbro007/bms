html,body,*,div.ul.li{
	margin: 0;
	padding: 0;
}
.bg{background-color: #eee;height: .8rem;}
#header{

	width: 100%;
	height: 4rem;
	font-size: 1.8rem;
	line-height: 4rem;
	text-align: center;
	background-color: #fff;
	color: #444;
}
form{
	margin-top: 1rem;
	background-color: #fff;
	padding: 1rem 0;
	height: 100%;
}
.red{color: red;}
.form_group{
	width: 80%;
	margin: 1.2rem auto;
	/*height: 3rem;*/
	/*line-height: 3rem;*/
	display: flex;
	border-bottom: 1px solid #555;
}
.form_group span{
	    width: 35%;
    font-size: 1.2rem;
    margin-right: 1.2rem;
    line-height: 2.2rem;
    color: #444;
}
.form_group input{
	width: 80%;
	height: 1rem;
	font-size: 1.2rem;
	border: none;
	padding: .8rem;
	/*box-shadow: 0 0 2px #444;*/
}
.form_group input:focus,
.form_group input:active{
	outline: none;
}
.form_group textarea{
	width: 80%;
	font-size: 1.2rem;
	border: none;
	padding: 1rem;
	/*box-shadow: 0 0 2px #444;*/
	height: 5rem;
	resize: none;
	background-color: #eee;
}
.form_group textarea:focus{
	outline: none;
}
input[type="submit"]{
	display: block;
	width: 60%;
	font-size: 1.4rem;
	height: 2.8rem;
	border: none;
	border-radius: 1.8rem;
	background-color: #FE5656;
	box-shadow: 0 2px 5px #666;
	color: #fff;
	margin: 4rem auto;
}