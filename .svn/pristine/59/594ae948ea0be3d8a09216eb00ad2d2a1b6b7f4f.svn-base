<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>欢迎页面-X-admin2.0</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport"
          content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi"/>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="/static/lib/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/static/css/font.css">
    <link rel="stylesheet" href="/static/css/xadmin.css">
    <script type="text/javascript" src="/static/js/jquery.min.js"></script>
    <script type="text/javascript" src="/static/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="/static/js/xadmin.js"></script>
    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<div class="x-nav">
      <span class="layui-breadcrumb">
        <a href="">首页</a>
        <a href="">演示</a>
        <a>
          <cite>导航元素</cite></a>
      </span>
</div>
<div class="x-body">
    <div class="layui-row">
        <div class="layui-form layui-col-md12 x-so">
            <div class="demoTable">
                <div class="layui-inline">
                    用户名：
                    <input class="layui-input" name="username" id="username" autocomplete="off" style="width: 120px">
                    公司名：
                    <input class="layui-input" name="company" id="company" autocomplete="off" style="width: 120px">
                    部门名：
                    <input class="layui-input" name="department" id="department" autocomplete="off" style="width: 120px">
                    职位名：
                    <input class="layui-input" name="department" id="department" autocomplete="off" style="width: 120px">
                    角色名：
                    <input class="layui-input" name="role" id="role" autocomplete="off" style="width: 120px">
                </div>
                <button class="layui-btn" data-type="reload">搜索</button>
            </div>
        </div>
    </div>

    <xblock>
        <div class="layui-btn-group demoTable">
            <button class="layui-btn layui-btn-danger" data-type="getCheckData">批量删除</button>
        </div>
        <button class="layui-btn" onclick="x_admin_show('添加职位','/admin/admin/add/')"><i class="layui-icon"></i>添加
        </button>
    </xblock>

    <table class="layui-table demoTable" lay-data="{height:500, url:'/admin/admin/data/', page:true, id:'idTest'}"
           lay-filter="demo">
        <thead>
        <tr>
            <th lay-data="{type:'checkbox', fixed: 'left'}"></th>
            <th lay-data="{type:'numbers', width:50}">序号</th>
            <th lay-data="{field:'username', width:100}">用户名</th>
            <th lay-data="{field:'company', width:200}">公司名</th>
            <th lay-data="{field:'department', width:170}">部门名</th>
            <th lay-data="{field:'position', width:100}">职位名</th>
            <th lay-data="{field:'role', width:200}">角色名</th>
            <th lay-data="{field:'level', width:60}">等级</th>
            <th lay-data="{field:'add_time', width:130,sort:true}">添加时间</th>
            <th lay-data="{fixed: 'right', align:'center', toolbar: '#barDemo',width:170}">操作</th>
        </tr>
        </thead>
    </table>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>

</div>
<script>
    layui.use('table', function () {
        var table = layui.table;
        //监听表格复选框选择
        table.on('checkbox(demo)', function (obj) {
            console.log(obj)
        });
        //监听工具条
        table.on('tool(demo)', function (obj) {
            var data = obj.data;
            if (obj.event === 'del') {
                member_del(data.id);
            } else if (obj.event === 'edit') {
                x_admin_show('编辑', '/admin/position/edit/' + data.id + "/")
            }
        });

        var $ = layui.$, active = {
            getCheckData: function () { //获取选中数据
                var checkStatus = table.checkStatus('idTest')
                    , data = checkStatus.data;
                var id_list = new Array()
                $.each(data, function (index, value) {
                    id_list.push(value.id)
                });
                delAll(id_list)
            },
            reload: function () {
                table.reload('idTest', {
                    where: {
                        username: $('#username').val(),
                        company: $('#company').val(),
                        department: $('#department').val(),
                        position: $('#position').val(),
                        role: $('#role').val(),
                    }
                });
            }
        };

        $('.demoTable .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

    });

    layui.use('laydate', function () {
        var laydate = layui.laydate;

        //执行一个laydate实例
        laydate.render({
            elem: '#start' //指定元素
        });

        //执行一个laydate实例
        laydate.render({
            elem: '#end' //指定元素
        });
    });


    /*公司-单个删除*/
    function member_del(id) {
        console.log(id)
        layer.confirm('确认要删除吗？', function (index) {
            //发异步删除数据
            $.ajax({
                url: "/admin/position/del/",
                type: "post",
                data: {
                    "id": id,
                    "csrfmiddlewaretoken": "{{ csrf_token }}"
                },
                success: function (response) {
                    if (response.code == 200) {
                        layer.alert(response.msg, {icon: 6}, function () {
                            window.location.reload()
                        });
                    }
                    else {
                        layer.alert(response.msg, {icon: 5})
                    }
                }
            })
        });
    }

    /*公司-批量删除*/
    function delAll(data) {
        layer.confirm('确认要删除吗？', function (index) {
            $.ajax({
                url: "/admin/position/del/",
                type: "post",
                dataType: "json",
                traditional: true,
                data: {
                    "id": JSON.stringify(data),
                    "csrfmiddlewaretoken": "{{ csrf_token }}"
                },
                success: function (response) {
                    if (response.code == 200) {
                        layer.alert(response.msg, {icon: 6}, function () {
                            window.location.reload()
                        });
                    }
                    else {
                        layer.alert(response.msg, {icon: 5})
                    }
                }
            })
            //捉到所有被选中的，发异步进行删除
            layer.msg('删除成功', {icon: 1});
            $(".layui-form-checked").not('.header').parents('tr').remove();
        });
    }

    var $ = layui.$, active = {
        reload: function () {
            var demoReload = $('#demoReload');

            //执行重载
            table.reload('idTest', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    key: {
                        id: demoReload.val()
                    }
                }
            });
        }
    };
</script>
</body>

</html>