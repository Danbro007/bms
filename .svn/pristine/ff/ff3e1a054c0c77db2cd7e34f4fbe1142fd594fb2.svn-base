<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>欢迎页面-X-admin2.0</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport"
          content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi"/>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="/static/css/font.css">
    <link rel="stylesheet" href="/static/css/xadmin.css">
    <script type="text/javascript" src="/static/js/jquery.min.js"></script>
    <script type="text/javascript" src="/static/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="/static/js/xadmin.js"></script>
    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<div class="x-nav">
      <span class="layui-breadcrumb">
        <a href="">首页</a>
        <a href="">演示</a>
        <a>
          <cite>导航元素88</cite></a>
      </span>
</div>
<div class="x-body">
    <div class="layui-row">
        <div class="layui-form layui-col-md12 x-so">
            <div class="demoTable">
                <div class="layui-inline">
                    权限名：
                    <input class="layui-input" name="rule" id="rule" autocomplete="off">
                    父级名：
                    <input class="layui-input" name="parent" id="parent" autocomplete="off">
                    模块名：
                    <input class="layui-input" name="app" id="app" autocomplete="off">
                    方法名：
                    <input class="layui-input" name="act" id="act" autocomplete="off">
                </div>
                <button class="layui-btn" data-type="reload">搜索</button>
            </div>
        </div>
    </div>
    <xblock>
        <div class="layui-btn-group demoTable">
            <button class="layui-btn layui-btn-danger" data-type="getCheckData">批量删除</button>
        </div>
        <button class="layui-btn" onclick="x_admin_show('添加权限','/admin/rule/add/')"><i class="layui-icon"></i>添加
        </button>
    </xblock>
    <table class="layui-table demoTable" lay-data="{height:500, url:'/admin/rule/data/', page:true, id:'idTest'}"
           lay-filter="demo">
        <thead>
        <tr>
            <th lay-data="{type:'checkbox', fixed: 'left'}"></th>
            <th lay-data="{type:'numbers', width:50}">序号</th>
            <th lay-data="{field:'title', width:240}">权限名称</th>
            <th lay-data="{field:'parent', width:240}">父级名称</th>
            <th lay-data="{field:'app', width:150}">模块</th>
            <th lay-data="{field:'act', width:150}">方法</th>
            <th lay-data="{field:'level', width:100}">等级</th>
            <th lay-data="{fixed: 'right', align:'center', toolbar: '#barDemo',width:260}">操作</th>
        </tr>
        </thead>
    </table>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
</div>
<script>
    layui.use('laydate', function () {
        var laydate = layui.laydate;


        //执行一个laydate实例
        laydate.render({
            elem: '#start' //指定元素
        });

        //执行一个laydate实例
        laydate.render({
            elem: '#end' //指定元素
        });
    });

    /*权限-单个删除*/
    function member_del(id) {
        layer.confirm('确认要删除吗？', function (index) {
            //发异步删除数据
            $.ajax({
                url: "/admin/rule/del/",
                type: "post",
                data: {
                    "id": id,
                    "csrfmiddlewaretoken": "{{ csrf_token }}"
                },
                success: function (response) {
                    if (response.code == 200) {
                        layer.alert(response.msg, {icon: 6}, function () {
                            window.location.reload()
                        });
                    }
                    else {
                        layer.alert(response.msg, {icon: 5})
                    }
                }
            })
        });
    }

    /*权限-批量删除*/
    function delAll(data) {
        if (data.length < 1) {
            layer.alert("请选择要删除权限", {icon: 5})
        }
        else {
            layer.confirm('确认要删除吗？', function (index) {
                $.ajax({
                    url: "/admin/rule/del/",
                    type: "post",
                    dataType: "json",
                    traditional: true,
                    data: {
                        "id": JSON.stringify(data),
                        "csrfmiddlewaretoken": "{{ csrf_token }}"
                    },
                    success: function (response) {
                        if (response.code == 200) {
                            layer.alert(response.msg, {icon: 6}, function () {
                                window.location.reload()
                            });
                        }
                        else {
                            layer.alert(response.msg, {icon: 5})
                        }
                    }
                });
                //捉到所有被选中的，发异步进行删除
                layer.msg('删除成功', {icon: 1});
                $(".layui-form-checked").not('.header').parents('tr').remove();
            });
        }

    }

    layui.use('table', function () {
        var table = layui.table;
        //监听表格复选框选择
        table.on('checkbox(demo)', function (obj) {
            console.log(obj)
        });
        //监听工具条
        table.on('tool(demo)', function (obj) {
            var data = obj.data;
            if (obj.event === 'del') {
                member_del(data.id);
            } else if (obj.event === 'edit') {
                x_admin_show('编辑', '/admin/rule/edit/' + data.id + "/")
            }
        });

        var $ = layui.$, active = {
            getCheckData: function () { //获取选中数据
                var checkStatus = table.checkStatus('idTest')
                    , data = checkStatus.data;
                var id_list = new Array()
                $.each(data, function (index, value) {
                    id_list.push(value.id)
                });
                delAll(id_list)
            },
            reload: function () {
                table.reload('idTest', {
                    where: {
                        rule:$("#rule").val(),
                        parent:$("#parent").val(),
                        app:$("#app").val(),
                        act:$("#act").val(),
                    }
                });
            }
        };

        $('.demoTable .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

    });

    layui.use(['form', 'layer'], function () {
        $ = layui.jquery;
        var form = layui.form
            , layer = layui.layer;

        //自定义验证规则
        form.verify({
            nikename: function (value) {
                if (value.length < 2) {
                    return '公司名至少得2个字符啊';
                }
            }
        });

        //监听提交
        form.on('submit(edit)', function (data) {
            console.log(data.field);
        });
    });

    var $ = layui.$, active = {
        reload: function () {
            var demoReload = $('#demoReload');
            console.log(demoReload)

            //执行重载
            table.reload('idTest', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    key: {
                        id: demoReload.val()
                    }
                }
            });
        }
    };

</script>
</body>
</html>